pipeline {
    environment{
        DOCKERHUB_CREDENTIALS = credentials('Docker-hub-access')
        WORKDIR = '/root/devops/website/.devops/'
        IP = '192.168.1.101'
        USER = 'root'
        }
//    agent { docker { image 'ubuntu:latest' } }
    agent any
  
    stages {
        stage('Git pull from repo') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/koliacv/website.git'
                sh "ls -lah"
            }
        } 
        stage('Login') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }
        stage('Build and test dockerfile') {
            steps {
                  sh '''
                    chmod +x .devops/test.sh
                    ./.devops/test.sh
                '''
            }
        }
        stage('Pull and start on server') {         
            agent {
                node {
                  label '' 
                    customWorkspace "$WORKDIR"
                }
            }
            steps { 
                sh 'echo "-------------Start deploy to server----------------"'
                sshagent(credentials : ['root-pass-for-deploy']) {
                    script {
                        sh '''
                            ssh -o StrictHostKeyChecking=no $USER@$IP cd $WORKDIR && docker-compose down || true
                            ssh -o StrictHostKeyChecking=no $USER@$IP cd $WORKDIR && docker-compose up -d
                        '''
                    }
                }            
            }        
        }
    }
    post {
	    always {
		    sh 'docker logout'
	    }
	}
}