pipeline {
    environment{
        DOCKERHUB_CREDENTIALS = credentials('Docker-hub-access')
        REPO_NAME = 'kolia2526/nginx'
        WORKDIR = '/home/kolia'
        }
    agent {
        docker { 
            image 'ubuntu:latest'
            label 'my-docker-label'
        }
    }
    stages {
        stage('Git pull from repo') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/koliacv/website.git'
                sh "ls -lah"
            }
        }        
        stage('Login') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }
        stage('Build and test dockerfile') {
            steps {
                  sh '''
                    cd .devops/
                    chmod +x test.sh
                    ./test.sh
                '''
            }
        }
        stage('Pull and start on server') {
            agent {
                node {
                    label 'ubuntu' 
                    customWorkspace "$WORKDIR"
                }
            }
            steps {
                echo "-------------Start deploy to server----------------"
                sh './script-for-add-new-file.sh'
                sh '''pwd
                docker kill $(docker ps -q)
                rm -rf /home/kolia/devops/*
                cd /home/kolia/devops
                git clone https://github.com/koliacv/website.git -b master
                cd /home/kolia/devops/website/.devops
                docker-compose up -d '''
            }        
        }
    }

    post {
	    always {
		    sh 'docker logout'
	    }
	}
}
