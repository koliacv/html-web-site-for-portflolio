pipeline {
    environment{
        DOCKERHUB_CREDENTIALS = credentials('Docker-hub-access')
        REPO_NAME = 'kolia2526/nginx'
    }
    agent any
    stages1 {
        stage('Git pull from repo') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/koliacv/website.git'
                sh "ls -lah"
            }
        }        
        stage('Login') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }
        stage('Build and test dockerfile') {
            steps {
                  sh '''
                    cd .devops/
                    chmod +x test.sh
                    ./test.sh
                '''
            }
        }
    }
    stages2 {
        stage('Pull and start on server') {
            agent {
                label 'website'
            }             
            steps {
                script {
                    sh '''
                      wget https://raw.githubusercontent.com/koliacv/website/master/.devops/docker-compose.yml
                      pwd
                      ls -lah
                      docker-compose up -d
                    '''
                }
            }
        }
    }

    post {
	    always {
		    sh 'docker logout'
	    }
	}
}
