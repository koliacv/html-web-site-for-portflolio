pipeline {
    environment{
        DOCKERHUB_CREDENTIALS = credentials('Docker-hub-access')
        REPO_NAME = 'kolia2526/nginx'
        WORKDIR = '/root/devops'
        }
//    agent { docker { image 'ubuntu:latest' } }
    agent any
  
    stages {
        stage('Git pull from repo') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/koliacv/website.git'
                sh "ls -lah"
            }
        } 
        stage('Login') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }
        stage('Build and test dockerfile') {
            steps {
                  sh '''
                    chmod +x .devops/test.sh
                    ./.devops/test.sh
                '''
            }
        }
        stage('Pull and start on server') {
            agent {
                node {
                    label 'ubuntu' 
                    customWorkspace "$WORKDIR"
                }
            }
            steps {
                echo "-------------Start deploy to server----------------"
                sh '''pwd
                rm -rf website/
                git clone https://github.com/koliacv/website.git -b master
                cd website/
                echo "------------Server directory------------"
                ls
                cd $WORKDIR/website/.devops
                docker-compose stop
                docker-compose rm -f
                docker-compose up '''
            }        
        }
    }

    post {
	    always {
		    sh 'docker logout'
	    }
	}
}
